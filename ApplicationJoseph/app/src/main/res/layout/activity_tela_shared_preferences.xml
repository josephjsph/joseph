<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.applicationjoseph.TelaSharedPreferences">

    <EditText
        android:id="@+id/edtNomeShared"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView19"
        android:ems="10"
        android:hint="Nome"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView19" />

    <EditText
        android:id="@+id/edtEmailShared"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edtNomeShared"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/edtNomeShared"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/btnGravarShared"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gravar"
        tools:layout_editor_absoluteY="167dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_below="@+id/edtEmailShared"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnLimparshared"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Limpar"
        tools:layout_editor_absoluteY="167dp"
        app:layout_constraintLeft_toRightOf="@+id/btnGravarShared"
        android:layout_below="@+id/edtEmailShared"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnRecuperarShared"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recuperar"
        tools:layout_editor_absoluteY="167dp"
        tools:layout_editor_absoluteX="249dp"
        android:layout_below="@+id/edtEmailShared"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="363dp"
        android:layout_height="55dp"
        android:text="Tela Shared Preferences"
        android:textAlignment="center"
        android:textSize="25dp"

        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />
</RelativeLayout>
